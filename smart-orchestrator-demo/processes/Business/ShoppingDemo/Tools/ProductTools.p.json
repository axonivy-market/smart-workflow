      "type" : "Script",
      "name" : "Find product",
      "config" : {
        "output" : {
          "code" : [
            "import com.axonivy.utils.smart.workflow.demo.shopping.product.ProductRepository;",
            "import org.apache.commons.lang3.StringUtils;",
            "",
            "in.response.product = ProductRepository.getInstance().findBySku(in.productSearchCriteria.sku);",
            "in.response.feedback = String.format(\"Product with SKU %s \", in.product.sku);",
            "in.response.feedback += in.response.product == null ? \" is not existing in the system\" :  \"is existing in the system\";",
            "in.response.isProductExisting = (in.response.product != null && StringUtils.isNotBlank(in.response.product.productId));",
            "",
            "if (!in.response.isProductExisting) {",
            "  in.response.product = in.product;",
            "}"
          ]
        }
      },
