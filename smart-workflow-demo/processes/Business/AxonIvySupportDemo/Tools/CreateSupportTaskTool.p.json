      "config" : {
        "output" : {
          "code" : [
            "import ch.ivyteam.ivy.workflow.ITask;",
            "import ch.ivyteam.ivy.workflow.query.TaskQuery;",
            "",
            "",
            "TaskQuery taskQuery = TaskQuery.create();",
            "List<ITask> tasks = taskQuery.where().name().isEqual(in.taskInfo.name).executor().results();",
            "",
            "",
            "in.isTaskAlreadyCreated = tasks != null && tasks.size() > 0;",
            "if (tasks.size() > 0) {",
            "  in.taskDetailLink = tasks.get(0).getDetailLink().getAbsolute();",
            "}"
          ]
        },
        "sudo" : true
      },
      "visual" : {
