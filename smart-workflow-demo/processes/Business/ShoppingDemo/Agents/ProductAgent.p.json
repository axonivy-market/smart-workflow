{
  "$schema" : "https://json-schema.axonivy.com/14.0-dev/project/process.json",
  "id" : "1994B7AE5502604A",
  "kind" : "CALLABLE_SUB",
  "config" : {
    "data" : "Business.ShoppingDemo.Agents.ProductAgentData"
  },
  "elements" : [ {
      "id" : "f0",
      "type" : "CallSubStart",
      "name" : "Product Agent",
      "config" : {
        "signature" : "productAgent",
        "input" : {
          "params" : [
            { "name" : "productInfo", "type" : "String", "desc" : "Product information" },
            { "name" : "action", "type" : "com.axonivy.utils.smart.workflow.demo.shopping.product.ProductAgentAction", "desc" : "" }
          ],
          "map" : {
            "out.action" : "param.action",
            "out.productInfo" : "param.productInfo"
          }
        },
        "result" : {
          "params" : [
            { "name" : "response", "type" : "com.axonivy.utils.smart.workflow.demo.shopping.product.ProductAgentResponse", "desc" : "" }
          ],
          "map" : {
            "result.response" : "in.result"
          }
        }
      },
      "visual" : {
        "at" : { "x" : 432, "y" : 264 },
        "description" : "The agent in charge of CRUD operations related to product"
      },
      "connect" : [
        { "id" : "f1", "to" : "f3" }
      ]
    }, {
      "id" : "f2",
      "type" : "CallSubEnd",
      "visual" : {
        "at" : { "x" : 744, "y" : 264 }
      }
    }, {
      "id" : "f3",
      "type" : "ProgramInterface",
      "name" : "Product Agent",
      "config" : {
        "javaClass" : "com.axonivy.utils.smart.workflow.AgenticProcessCall",
        "userConfig" : {
          "model" : "\"gpt-4.1\"",
          "system" : "You are an AI Agent in charge of create/update product operation for an invetory of a company.\r\nWith the given product information, you need to perform these steps:\r\n\r\nChoosen action: <%= in.action.name() %>\r\n\r\nInstructions:\r\n<%= in.action.systemInstruction %>",
          "resultType" : "com.axonivy.utils.smart.workflow.demo.shopping.product.ProductAgentResponse.class",
          "tools" : "[\"findProduct\",\"createProduct\",\"checkProductDependencies\", \"createProductSearchCriteria\"]",
          "resultMapping" : "in.result",
          "query" : "This is product information\r\n---\r\n\r\n<%= in.productInfo %>"
        }
      },
      "visual" : {
        "at" : { "x" : 592, "y" : 264 }
      },
      "connect" : [
        { "id" : "f4", "to" : "f2" }
      ]
    } ]
}