      ]
    }, {
      "id" : "f7",
      "type" : "Script",
      "name" : "Create product brand",
      "config" : {
        "output" : {
          "code" : [
            "import com.axonivy.utils.smart.workflow.demo.shopping.brand.BrandRepository;",
            "",
            "in.brand = BrandRepository.getInstance().create(in.brand);",
            "",
            "if (in.brand == null) {",
            "  in.response.feedback = \"Error when create product brand\";",
            "} else {",
            "  in.response.feedback = \"Product brand is created successfully\";",
