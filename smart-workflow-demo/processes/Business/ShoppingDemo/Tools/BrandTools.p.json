      "config" : {
        "output" : {
          "code" : [
            "import com.axonivy.utils.smart.workflow.demo.shopping.brand.BrandRepository;",
            "import com.axonivy.utils.smart.workflow.demo.shopping.productcategory.ProductCategoryRepository;",
            "import org.apache.commons.collections4.CollectionUtils;",
            "",
            "in.response.brand  = BrandRepository.getInstance().findExactBrand(in.searchCriteria);",
            "in.response.isBrandExisting = in.response.brand != null;",
            "in.response.feedback = in.response.isBrandExisting ? \"Brand is found\" : \"Brand not found\";",
            "in.response.brandSearchCriteria = in.searchCriteria;"
          ]
        }
